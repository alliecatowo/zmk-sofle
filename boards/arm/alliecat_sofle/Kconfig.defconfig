if BOARD_ALLIECAT_SOFLE_LEFT

config ZMK_KEYBOARD_NAME
    default "Allie Cat Sofle"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

endif # BOARD_ALLIECAT_SOFLE_LEFT

if BOARD_ALLIECAT_SOFLE_DONGLE

config ZMK_KEYBOARD_NAME
    default "Sofle Dongle"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

endif # BOARD_ALLIECAT_SOFLE_DONGLE


if BOARD_ALLIECAT_SOFLE_LEFT || BOARD_ALLIECAT_SOFLE_RIGHT || BOARD_ALLIECAT_SOFLE_DONGLE

config BOARD
    default "alliecat_sofle"

config BOARD_ENABLE_DCDC
    bool "Enable DCDC mode"
    select SOC_DCDC_NRF52X
    default y
    depends on (BOARD_ALLIECAT_SOFLE_LEFT || BOARD_ALLIECAT_SOFLE_RIGHT || BOARD_ALLIECAT_SOFLE_DONGLE)

config BOARD_ENABLE_DCDC_HV
    bool "Enable High Voltage DCDC converter"
    select SOC_DCDC_NRF52X_HV
    default y
    depends on (BOARD_ALLIECAT_SOFLE_LEFT || BOARD_ALLIECAT_SOFLE_RIGHT || BOARD_ALLIECAT_SOFLE_DONGLE)

config ZMK_SPLIT
    default y

config BT_CTLR
    default BT

if USB

config USB_NRFX
    default y

config USB_DEVICE_STACK
    default y

endif # USB

if ZMK_DISPLAY

config I2C
    default y

config SSD1306
    default y

choice ZMK_DISPLAY_WORK_QUEUE
    default ZMK_DISPLAY_WORK_QUEUE_DEDICATED
endchoice

endif

if SSD1306

config LV_Z_VDB_SIZE
    default 64

config LV_DPI_DEF
    default 148

config LV_Z_BITS_PER_PIXEL
    default 1

choice LV_COLOR_DEPTH
    default LV_COLOR_DEPTH_1
endchoice

endif

if ZMK_BACKLIGHT

config PWM
    default y

config LED_PWM
    default y

endif # ZMK_BACKLIGHT

endif # BOARD_ALLIECAT_SOFLE_LEFT || BOARD_ALLIECAT_SOFLE_RIGHT || BOARD_ALLIECAT_SOFLE_DONGLE
