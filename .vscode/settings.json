{
    "files.associations": {
        "*.overlay": "c",
        "*.keymap": "c",
        "*.dtsi": "c",
        "*.dts": "c",
        "*.conf": "properties",
        "west.yml": "yaml",
        "build.yaml": "yaml"
    },
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/config",
        "${workspaceFolder}/zephyr/include",
        "${workspaceFolder}/zephyr/lib/libc/minimal/include",
        "${workspaceFolder}/zmk/app/include",
        "${workspaceFolder}/modules/zmk-dongle-display/include"
    ],
    "C_Cpp.default.defines": [
        "CONFIG_ZMK=1",
        "CONFIG_ZMK_KEYBOARD_NAME=\"Eyelash Sofle\"",
        "CONFIG_ZMK_SPLIT=1"
    ],
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "gcc-arm",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.trimAutoWhitespace": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "search.exclude": {
        "**/build": true,
        "**/zephyr": true,
        "**/modules": true,
        "**/tools": true,
        "**/.west": true,
        "**/backups": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/build": true,
        "**/.west": true
    },
    "files.watcherExclude": {
        "**/build/**": true,
        "**/zephyr/**": true,
        "**/modules/**": true,
        "**/tools/**": true,
        "**/.west/**": true
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh",
            "args": [
                "-l"
            ]
        }
    },
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,
    "yaml.schemas": {
        "https://raw.githubusercontent.com/zmkfirmware/zmk/main/app/schemas/hardware-metadata.schema.json": [
            "**/boards/**/*.yml",
            "**/shields/**/*.yml"
        ]
    },
    "markdown.preview.breaks": true,
    "markdown.preview.linkify": true,
    "json.schemas": [
        {
            "fileMatch": [
                "keymap_drawer.config.yaml"
            ],
            "url": "https://raw.githubusercontent.com/caksoylar/keymap-drawer/main/keymap_drawer/config.schema.json"
        }
    ],
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "cmake.configureOnOpen": false,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.formatOnSave": false,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80
    },
    "workbench.colorCustomizations": {
        "activityBar.background": "#1a1a2e",
        "activityBar.foreground": "#ffffff",
        "statusBar.background": "#16213e",
        "statusBar.foreground": "#ffffff",
        "titleBar.activeBackground": "#1a1a2e",
        "titleBar.activeForeground": "#ffffff"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment.line.double-slash.c",
                    "comment.block.c"
                ],
                "settings": {
                    "foreground": "#6A9955",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "keyword.control.directive.c",
                    "keyword.control.directive.include.c"
                ],
                "settings": {
                    "foreground": "#C586C0"
                }
            },
            {
                "scope": [
                    "entity.name.function.c"
                ],
                "settings": {
                    "foreground": "#DCDCAA"
                }
            }
        ]
    },
    "problems.decorations.enabled": true,
    "problems.showCurrentInStatus": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[([ x])\\])",
    "extensions.ignoreRecommendations": false,
    "extensions.showRecommendationsOnlyOnDemand": false
}
